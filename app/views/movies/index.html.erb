<h1>Rotten Mangoes</h1>
<%= link_to "Submit a movie!", new_movie_path %>
<hr />
<h2>Search</h2>
<%= form_tag(movies_path, method: :get) do %>
  <%= label_tag :title_or_director %> <br />
  <%= text_field_tag :title_or_director %> <br />
  <%= label_tag (:runtime_in_minutes) %> <br />
  <%= select_tag :runtime_in_minutes, options_for_select(["Select Duration", "Under 90 minutes", "Between 90 and 120 minutes", "Over 120 minutes"]) %> <br />
  <%= submit_tag "Search" %>
<% end %>

<br />
<% @movies.each do |movie| %>
  <%= link_to image_tag(movie.image.thumb.url), movie_path(movie) %>
  <h2><%= link_to movie.title, movie_path(movie) %></h2>
  <h2><%= movie.review_average %>/10</h2>
  <h3><%= formatted_date(movie.release_date) %></h3>
  <h4>Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes</h4>
  <p><%= movie.description %></p>
  <hr />
<% end %> 